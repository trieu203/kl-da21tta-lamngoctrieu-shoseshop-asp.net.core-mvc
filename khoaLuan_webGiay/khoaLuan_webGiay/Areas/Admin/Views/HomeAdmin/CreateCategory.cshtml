@model khoaLuan_webGiay.Data.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Tạo Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Tạo Mới Danh Mục Sản Phẩm</h2>
        <a asp-area="admin" asp-controller="HomeAdmin" asp-action="Category" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateCategory" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Tên danh mục -->
                <div class="mb-3">
                    <label asp-for="CategoryName" class="form-label fw-bold">Tên danh mục</label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <!-- Mô tả danh mục -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả danh mục..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- hình ảnh -->
                <div class="mb-3">
                    <label class="form-label">Hình ảnh danh mục</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>

                <!-- Nút hành động -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Lưu danh mục
                    </button>
                    <a asp-area="admin" asp-controller="HomeAdmin" asp-action="Category" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
