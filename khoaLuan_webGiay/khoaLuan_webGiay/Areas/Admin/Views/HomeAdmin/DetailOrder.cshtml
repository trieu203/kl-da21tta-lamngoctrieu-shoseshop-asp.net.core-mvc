@model khoaLuan_webGiay.Data.Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Chi tiết đơn hàng</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Thông tin đơn hàng</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Ngày đặt hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-3">Tổng tiền</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount) VND</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                @(Model?.OrderStatus == "Pending" ? "Đang xử lý" : Model?.OrderStatus == "Completed" ? "Hoàn thành" : Model?.OrderStatus == "Cancelled" ? "Đã hủy" : Model?.OrderStatus)
            </dd>

            <dt class="col-sm-3">Địa chỉ giao hàng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ShippingAddress)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-3">Người dùng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.User.UserName)</dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="EditOrder" asp-route-id="@Model?.OrderId" class="btn btn-warning">Sửa</a>
    <a asp-action="Order" class="btn btn-secondary">Quay lại danh sách</a>
</div>
