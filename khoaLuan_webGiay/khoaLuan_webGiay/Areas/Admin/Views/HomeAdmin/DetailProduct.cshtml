@model khoaLuan_webGiay.Data.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DetailProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Chi tiết sản phẩm</h1>
    <hr />
    <div class="card">
        <div class="card-header bg-primary text-white">
            Thông tin sản phẩm
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm:</dt>
                <dd class="col-sm-8">@Model.ProductName</dd>

                <dt class="col-sm-4">Giá:</dt>
                <dd class="col-sm-8">@Model.Price VNĐ</dd>

                <dt class="col-sm-4">Mô tả:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Giảm giá:</dt>
                <dd class="col-sm-8">@Model.Discount%</dd>

                <dt class="col-sm-4">Lượt xem:</dt>
                <dd class="col-sm-8">@Model.ViewCount</dd>

                <dt class="col-sm-4">Đánh giá trung bình:</dt>
                <dd class="col-sm-8">@Model.AverageRating ⭐</dd>

                <dt class="col-sm-4">Đã bán:</dt>
                <dd class="col-sm-8">@Model.TotalSold</dd>

                <dt class="col-sm-4">Ngày tạo:</dt>
                <dd class="col-sm-8">@(Model.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                <dt class="col-sm-4">Hình ảnh:</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                            @{
                                var imagePath = Url.Content("~/img/products/" + Model.ImageUrl);
                            }
                            <img src="@imagePath" alt="@Model.ProductName" class="img-thumbnail" style="width: 100px; height: 100px;" onerror="this.onerror=null; this.src='/img/products/default.jpg';" />
                        </div>
                    }
                </dd>

                <dt class="col-sm-4">Danh mục:</dt>
                <dd class="col-sm-8">@Model.Category?.CategoryName</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Product" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
