@model khoaLuan_webGiay.Data.ProductSize
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết kích cỡ sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-box-seam"></i> Chi tiết kích cỡ sản phẩm</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã kích cỡ</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.ProductSizeId)</span>
                </dd>

                <dt class="col-sm-3">Mã sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductId)</dd>

                <dt class="col-sm-3">Sản phẩm:</dt>
                <dd class="col-sm-9">@Model.Product?.ProductName</dd>

                <dt class="col-sm-3">Kích cỡ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Size)</dd>

                <dt class="col-sm-3">Số lượng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-3">Giá tại thời điểm</dt>
                <dd class="col-sm-9 text-success fw-bold">@Html.DisplayFor(model => model.PriceAtTime)</dd>
            </dl>
        </div>
        <div class="card-footer text-end bg-light rounded-bottom-4">
            <a asp-action="EditProductSize" asp-route-id="@Model.ProductSizeId" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="ProductSize" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
