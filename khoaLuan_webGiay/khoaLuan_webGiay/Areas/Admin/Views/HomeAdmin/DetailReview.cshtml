@model khoaLuan_webGiay.Data.Review
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi Tiết Đánh Giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-chat-left-text-fill me-2"></i> Chi Tiết Đánh Giá
            </h3>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <!-- Số sao -->
                <dt class="col-sm-3">Số sao:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark fs-6">
                        <i class="bi bi-star-fill me-1"></i>@Model.Rating / 5
                    </span>
                </dd>

                <!-- Bình luận -->
                <dt class="col-sm-3">Bình luận:</dt>
                <dd class="col-sm-9">@Model.Comment</dd>

                <!-- Ngày đánh giá -->
                <dt class="col-sm-3">Ngày đánh giá:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ReviewDate)</dd>

                <!-- Sản phẩm -->
                <dt class="col-sm-3">Sản phẩm:</dt>
                <dd class="col-sm-9">@Model.Product?.ProductName</dd>

                <!-- Người dùng -->
                <dt class="col-sm-3">Người dùng:</dt>
                <dd class="col-sm-9">@Model.User?.UserName</dd>
            </dl>
        </div>

        <div class="card-footer text-end bg-light rounded-bottom-4">
            <a asp-action="Review" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
