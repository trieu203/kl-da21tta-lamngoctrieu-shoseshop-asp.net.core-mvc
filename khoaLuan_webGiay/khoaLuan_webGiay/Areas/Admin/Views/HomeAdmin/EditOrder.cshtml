@model khoaLuan_webGiay.Data.Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa trạng thái đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Chỉnh Sửa Trạng Thái Đơn Hàng</h1>

    <div class="card shadow-sm rounded-4 mb-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> Cập nhật trạng thái cho đơn hàng của khách hàng.
            </h5>
        </div>

        <div class="card-body">
            <form asp-action="EditOrder" asp-route-id="@Model.OrderId">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="OrderId" />

                <div class="mb-3">
                    <label asp-for="OrderStatus" class="form-label fw-bold">Trạng thái đơn hàng</label>
                    <select asp-for="OrderStatus" class="form-select">
                        <option value="Pending">Đang chờ xử lý</option>
                        <option value="Confirmed">Đã xác nhận</option>
                        <option value="Shipped">Đã giao hàng</option>
                        <option value="Cancelled">Đã hủy</option>
                        <option value="Completed">Hoàn thành</option>
                    </select>
                    <span asp-validation-for="OrderStatus" class="text-danger small"></span>
                </div>
            </form>
        </div>

        <div class="card-footer bg-light text-end rounded-bottom-4">
            <button type="submit" form="form0" class="btn btn-primary me-2">
                <i class="bi bi-check-circle"></i> Lưu
            </button>
            <a asp-action="Order" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
