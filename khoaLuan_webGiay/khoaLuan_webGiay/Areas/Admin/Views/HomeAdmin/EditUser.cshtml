@model khoaLuan_webGiay.Data.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Cập Nhật Vai Trò Người Dùng</h1>

    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            
        </div>

        <form asp-action="EditUser">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="UserId" />

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Role" class="form-label fw-bold">Vai trò</label>
                        <select asp-for="Role" class="form-select" asp-items="ViewBag.Roles">
                            <option value="">-- Chọn --</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light text-end rounded-bottom-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-check-circle"></i> Lưu
                </button>
                <a asp-action="User" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
