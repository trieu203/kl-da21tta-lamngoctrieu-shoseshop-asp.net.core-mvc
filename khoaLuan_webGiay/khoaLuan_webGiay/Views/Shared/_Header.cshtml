<div class="container-fluid">
    <!-- Thanh điều hướng trên cùng -->
    <div class="row bg-secondary py-1 px-xl-5">
        <div class="col-lg-6 d-none d-lg-block">
            <!-- Có thể thêm nội dung nếu cần -->
        </div>
        <div class="col-lg-6 text-center text-lg-right">
            <!-- Các nút yêu thích và giỏ hàng hiển thị trên di động -->
            <div class="d-inline-flex align-items-center d-block d-lg-none">
                <a href="" class="btn px-0 ml-2">
                    <i class="fas fa-heart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">0</span>
                </a>
                <a href="" class="btn px-0 ml-2">
                    <i class="fas fa-shopping-cart text-dark"></i>
                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">0</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Thanh điều hướng giữa -->
    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <!-- Logo -->
        <div class="col-lg-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <span class="h1 text-uppercase text-primary bg-dark px-2">Milion</span>
                <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">Sneaker</span>
            </a>
        </div>

        <!-- Form tìm kiếm -->
        <div class="col-lg-4 col-6 text-left">
            <form asp-action="Search" asp-controller="Products">
                <div class="input-group">
                    <input id="searchText" type="search" class="form-control" name="query" placeholder="Tìm kiếm sản phẩm">
                    <div class="input-group-append">
                        <button type="submit" id="searchButton" class="btn btn-warning search-btn">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Thanh menu tài khoản -->
        <div class="col-lg-4 col-6 text-right">
            <div class="d-inline-flex align-items-center">
                <div class="btn-group">
                    <div class="nav-item dropdown">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
                                @await Component.InvokeAsync("UserAvatar")
                                <span>@User.Identity.Name</span>
                            </button>

                            <div class="dropdown-menu dropdown-menu-right">
                                <a asp-controller="Users" asp-action="Logout" class="dropdown-item">Đăng xuất</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Admin" asp-action="Index" class="dropdown-item">Quản lý</a>
                                }
                                else
                                {
                                    <a asp-controller="Users" asp-action="Details" class="dropdown-item">Thông tin cá nhân</a>
                                }
                            </div>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">
                                Đăng nhập/Đăng ký
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a asp-controller="Users" asp-action="Login" class="dropdown-item">Đăng nhập</a>
                                <a asp-controller="Users" asp-action="Register" class="dropdown-item">Đăng ký</a>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
