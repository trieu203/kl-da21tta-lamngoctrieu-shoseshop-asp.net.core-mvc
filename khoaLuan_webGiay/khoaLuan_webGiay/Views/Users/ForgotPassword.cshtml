@model khoaLuan_webGiay.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Product";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h2 class="fw-bold"><i class="bi bi-lock-fill me-2 text-primary"></i>Khôi phục mật khẩu</h2>
                <p class="text-muted">Vui lòng thực hiện các bước sau để đặt lại mật khẩu tài khoản của bạn</p>
            </div>

            <form id="forgotForm">
                <!-- Bước 1: Nhập Email -->
                <div id="step-email">
                    <div class="card p-4 shadow-sm rounded-4 border-primary border-start border-5">
                        <h5 class="mb-3 text-primary"><i class="bi bi-envelope-at-fill me-2"></i>Bước 1: Nhập Email</h5>
                        <input id="emailInput" class="form-control mb-2" type="email" placeholder="Nhập email tài khoản" required />
                        <div id="email-error" class="text-danger mb-2"></div>
                        <button type="button" class="btn btn-primary w-100" onclick="sendOtp()">
                            <i class="bi bi-send-check-fill me-1"></i>Gửi mã OTP
                        </button>
                    </div>
                </div>

                <!-- Bước 2: Nhập OTP -->
                <div id="step-otp" class="d-none mt-4">
                    <div class="card p-4 shadow-sm rounded-4 border-warning border-start border-5">
                        <h5 class="text-warning mb-3"><i class="bi bi-shield-lock-fill me-2"></i>Bước 2: Xác thực OTP</h5>
                        <input id="otpInput" class="form-control mb-2" placeholder="Nhập mã OTP (6 chữ số)" />
                        <div id="otp-error" class="text-danger mb-2"></div>
                        <div class="alert alert-warning d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Lưu ý:</strong> Kiểm tra <b>Hộp thư rác (Spam)</b> và đánh dấu là <b>Không phải spam</b> nếu không thấy email.
                            </div>
                        </div>
                        <button type="button" class="btn btn-success w-100" onclick="verifyOtp()">
                            <i class="bi bi-shield-check me-1"></i>Xác thực OTP
                        </button>
                    </div>
                </div>

                <!-- Bước 3: Nhập mật khẩu mới -->
                <div id="step-reset" class="d-none mt-4">
                    <div class="card p-4 shadow-sm rounded-4 border-success border-start border-5">
                        <h5 class="text-success mb-3"><i class="bi bi-key-fill me-2"></i>Bước 3: Nhập mật khẩu mới</h5>

                        <input id="newPasswordInput" class="form-control mb-2" type="password" placeholder="Mật khẩu mới" />
                        <input id="confirmPasswordInput" class="form-control mb-2" type="password" placeholder="Nhập lại mật khẩu" />

                        <div id="reset-error" class="text-danger mb-2"></div>
                        <button type="button" class="btn btn-success w-100" onclick="resetPassword()">
                            <i class="bi bi-arrow-repeat me-1"></i>Cập nhật mật khẩu
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/forgotpassword.js" asp-append-version="true"></script>
}