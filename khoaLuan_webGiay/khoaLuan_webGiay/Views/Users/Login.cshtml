@model khoaLuan_webGiay.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Product";
}

<div class="card login-card shadow-sm">
    <div class="card-header bg-primary text-white text-center rounded-top-4">
        <h4 class="mb-0"><i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập</h4>
    </div>
    <div class="card-body px-4 py-4">
        <form asp-action="Login" method="post">
            <div class="mb-3 position-relative">
                <label for="UserNameOrEmail" class="form-label">
                    <i class="bi bi-person-circle me-1"></i> Tên đăng nhập hoặc Email
                </label>
                <input asp-for="UserNameOrEmail" class="form-control" placeholder="Nhập tên đăng nhập hoặc email" />
                <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
            </div>

            <div class="mb-3 position-relative">
                <label for="Password" class="form-label">
                    <i class="bi bi-lock-fill me-1"></i> Mật khẩu
                </label>
                <div class="position-relative">
                    <input asp-for="Password" class="form-control" type="password" id="password-input" placeholder="Nhập mật khẩu" />
                    <i class="bi bi-eye-slash-fill toggle-password text-secondary" id="togglePassword"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password-input");

    togglePassword.addEventListener("click", function () {
        const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
        passwordInput.setAttribute("type", type);
        this.classList.toggle("bi-eye");
        this.classList.toggle("bi-eye-slash-fill");
    });
</script>

<style>
    .login-card {
        max-width: 500px;
        margin: 60px auto;
        border-radius: 1rem;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
    }

    .form-label {
        font-weight: 500;
    }

    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
    }
</style>